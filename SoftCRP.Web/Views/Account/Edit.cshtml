@model SoftCRP.Web.Models.UserRoleViewModel
@{
    ViewData["Title"] = "Editar Usuario";
}
    <div align="center">
        <div align="left" class="col-md-6">
            <div class="card card-warning">
                <div class="card-header" style="color:#ffffff; background-color:#F2AE0B">
                    <h2 class="card-title" style="font-style:oblique"><b>MODIFICAR USUARIO</b></h2>
                </div>
                <form method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly"></div>
                        @*<input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Roles" />
        <input type="hidden" asp-for="UserName" />
        <input type="hidden" asp-for="SecurityStamp" />*@
                        @for (int j = 0; j < Model.Roles.Count; j++)
                        {
                            <input type="hidden" asp-for="Roles[j].Id" />
                            <input type="hidden" asp-for="Roles[j].Name" />
                        }

                        <div class="form-group">
                            <label asp-for="Cedula">Ruc/Cédula:</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fa fa-id-card">

                                        </i>
                                    </span>
                                </div>

                                <input asp-for="Cedula" class="form-control" />
                                <span asp-validation-for="Cedula" class="text-warning"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="FirstName">Nombre:</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fa fa-user">

                                        </i>
                                    </span>
                                </div>

                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-warning"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="LastName">Apellido:</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fa fa-user">

                                        </i>
                                    </span>
                                </div>


                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-warning"></span>
                            </div>
                        </div>

                        <input type="hidden" asp-for="ImageUrl" />
                        <input type="hidden" asp-for="UserName" />
                        <div class="form-group">
                            <label asp-for="FotoFile" class="control-label"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fa fa-upload">

                                        </i>
                                    </span>
                                </div>
                                <input asp-for="FotoFile" class="form-control" type="file" />
                                <span asp-validation-for="FotoFile" class="text-danger"></span>
                            </div>
                        </div>

                            <div class="form-group">
                                <label asp-for="Email">Email:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fa fa-envelope">

                                            </i>
                                        </span>
                                    </div>

                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-warning"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="PhoneNumber">Número telefónico:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fas fa-phone">

                                            </i>
                                        </span>
                                    </div>

                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-warning"></span>
                                </div>
                            </div>


                            <h3 style="font-style:oblique"><b>Roles</b></h3>
                            <hr />
                            <div class="row">
                                @if (Model.Roles.Count > 0)
                                {
                                    @for (int i = 0; i < Model.Roles.Count; i++)
                                    {
                                        <div class="form-check m-1">
                                            <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
                                            <label class="form-check-label">
                                                @Model.Roles[i].Name
                                            </label>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <h3>NO TIENE ROLES ASIGNADOS</h3>
                                }
                            </div>
                        </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn" style="background-color:#002D73; color:#ffffff;"  id="editar"><i class="fa fa-check">&nbsp;</i>Modificar</button>
                        <a asp-action="Index" style="background-color:#F2AE0B; color:#ffffff;" class="btn btn"><i class="fas fa-angle-double-left">&nbsp;</i>Regresar</a>
                    </div>
                    <div class="text-success">@ViewBag.UserMessage</div>
                </form>
                    </div>

                </div>
            </div>


        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            <script type="text/javascript">
            @Html.Raw(ViewBag.SweetAlertShowMessage)
            </script>
        }


