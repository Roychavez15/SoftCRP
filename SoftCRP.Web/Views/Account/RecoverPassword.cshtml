@model SoftCRP.Web.Models.RecoverPasswordViewModel

@{
    ViewData["Title"] = "Recuperar Password";
}
    <div align="center">
        <div align="left" class="col-md-6">
            <div class="card card-danger">
                <div class="card-header">
                    <h3 class="card-title">Recuperar contraseña</h3>
                </div>

                <form method="post" role="form">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly"></div>

                        <div class="form-group">
                            <label asp-for="Email">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-warning"></span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Confirmar" class="btn btn-primary" />
                        <a asp-action="Login" class="btn btn-success"><i class="fas fa-angle-double-left">&nbsp;</i>Regresar</a>
                    </div>
                </form>
                        <div class="text-success">
                            <p>
                                @ViewBag.Message
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            <script type="text/javascript">
            @Html.Raw(ViewBag.SweetAlertShowMessage)
            </script>
        }

