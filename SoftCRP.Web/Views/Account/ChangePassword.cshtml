@model SoftCRP.Web.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Cambiar Password";
}
    <div align="center">
        <div align="left" class="col-md-6">
            <div class="card card-danger">
                <div class="card-header" style="background-color:#F2AE0B; color:#ffffff;">
                    <h3 class="card-title" style="font-style:oblique"><b>CAMBIAR CONTRASEÑA</b></h3>
                </div>
                <form method="post" role="form">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly"></div>

                        <div class="form-group">
                            <label asp-for="OldPassword">Contraseña actual</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fa fa-key">

                                        </i>
                                    </span>
                                </div>

                                <input asp-for="OldPassword" type="password" class="form-control" />
                                <span asp-validation-for="OldPassword" class="text-warning"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="NewPassword">Nueva contraseña</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fa fa-key">

                                        </i>
                                    </span>
                                </div>

                                <input asp-for="NewPassword" type="password" class="form-control" />
                                <span asp-validation-for="NewPassword" class="text-warning"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Confirm">Confirmar contraseña</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fa fa-key">

                                        </i>
                                    </span>
                                </div>

                                <input asp-for="Confirm" type="password" class="form-control" />
                                <span asp-validation-for="Confirm" class="text-warning"></span>
                            </div>
                        </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn" style="background-color:#002D73; color:#ffffff;"  ><i class="fa fa-check">&nbsp;</i>Confirmar</button>
                        <a asp-action="ChangeUser" class="btn btn" style="background-color:#F2AE0B; color:#ffffff;" ><i class="fas fa-angle-double-left">&nbsp;</i>Regresar</a>
                    </div>
                </form>
                    </div>
                </div>
            </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            <script type="text/javascript">
            @Html.Raw(ViewBag.SweetAlertShowMessage)
            </script>
        }
