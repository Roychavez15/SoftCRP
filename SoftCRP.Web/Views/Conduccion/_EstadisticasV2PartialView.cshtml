
@model SoftCRP.Web.Models.EstadisticasV2ViewModel

@{
    ViewData["Title"] = "Home";
}

@if (Model.vehiculosGps == null)
{

    <h2> No existen Datos de GPS</h2>
}
else
{
    <table class="table table-bordered table-striped" id="table">
        <thead>
            <tr>

                <th>PLACA</th>
                <th>CANTIDAD DE VIAJES</th>
                <th>USUARIO</th>
                <th>DISTANCIA RECORRIDA</th>
                <th>CANTIDAD DE EVENTOS</th>
                <th>ACELERACIONES BRUSCAS</th>
                <th>FRENASOS BRUSCOS</th>
                <th>EXCESOS DE VELOCIDAD</th>
                <th>GIROS BRUSCOS</th>
                <th>CALIFICACIÓN PROMEDIO</th>
                @*<th>FECHA</th>*@
                <th>Anio</th>
                <th>Mes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.vehiculosGps.ToList())
            {
            <tr>

                <td>@Html.DisplayFor(modelItem => item.vehiculo.Placa)</td>
                <td>@Html.DisplayFor(modelItem => item.trips)</td>
                <td>@Html.DisplayFor(modelItem => item.usuario)</td>
                <td>@Html.DisplayFor(modelItem => item.kilometerstraveled)</td>
                <td>
                    @{
                        var events = item.sharpacceleration + item.sharpturn + item.hardbraking + item.speeding;
                        @events
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.sharpacceleration)</td>
                <td>@Html.DisplayFor(modelItem => item.hardbraking)</td>
                <td>@Html.DisplayFor(modelItem => item.speeding)</td>
                <td>@Html.DisplayFor(modelItem => item.sharpturn)</td>
                <td>@Html.DisplayFor(modelItem => item.score)</td>
                @*<td>@Html.DisplayFor(modelItem => item.anio)/@Html.DisplayFor(modelItem => item.mes)/@Html.DisplayFor(modelItem => item.dia)</td>*@
                <td>@Html.DisplayFor(modelItem => item.anio)</td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.mes)*@
                    @{
                        var mes = item.mes;
                        var messalida = "";
                        if (mes == 1)
                        {
                            messalida = "Enero";
                        }
                        else if (mes == 2)
                        {
                            messalida = "Febrero";
                        }
                        else if (mes == 3)
                        {
                            messalida = "Marzo";
                        }
                        else if (mes == 4)
                        {
                            messalida = "Abril";
                        }
                        else if (mes == 5)
                        {
                            messalida = "Mayo";
                        }
                        else if (mes == 6)
                        {
                            messalida = "Junio";
                        }
                        else if (mes == 7)
                        {
                            messalida = "Julio";
                        }
                        else if (mes == 8)
                        {
                            messalida = "Agosto";
                        }
                        else if (mes == 9)
                        {
                            messalida = "Septiembre";
                        }
                        else if (mes == 10)
                        {
                            messalida = "Octubre";
                        }
                        else if (mes == 11)
                        {
                            messalida = "Noviembre";
                        }
                        else if (mes == 12)
                        {
                            messalida = "Diciembre";
                        }
                        @messalida;
                    }
                </td>
            </tr>
            }
        </tbody>
    </table>
}
