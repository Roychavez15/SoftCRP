@model SoftCRP.Web.Models.HistorialDataViewModel

@{
    ViewData["Title"] = "Información General";
}


@*<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />*@

<div class="row">
    <div class="col-md-12 col-sm-6">
        <div class="card">
            <div class="card-header" style="background-color:#002D73; color:#ffffff;">
                @if (ViewBag.ClienteViewModel != null)
                {
                    <h2 class="card-title"><b>FLOTA DEL CLIENTE @ViewBag.ClienteViewModel.nombre</b></h2>
                }
            </div>
            <div class="card-body">

                <div class="col-md-4">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Todas la Placas</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="desdet">Desde</label>
                                    <input class="form-control" id="desdet" asp-for="desde">
                                </div>
                                <div class="form-group">
                                    <label for="hastat">Hasta</label>
                                    <input class="form-control" id="hastat" asp-for="hasta">
                                </div>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="isActivet" asp-for="isActive">
                                    <label class="form-check-label" for="isActivet">Activar/Desactivar</label>
                                </div>
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <button id="btnaddt" class="btn btn-primary">Guardar</button>
                            </div>
                        </form>
                    </div>
                </div>

                    <table class="table table-bordered table-striped" id="tableVehiculos">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Histories.FirstOrDefault().Placa)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Histories.FirstOrDefault().Desde)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Histories.FirstOrDefault().Hasta)
                                </th>
                                <th>
                                    Activar/Desactivar
                                </th>
                                <th>Ver detalles</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Histories.Where(p=>p.Placa!=""))
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Placa)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Desde)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Hasta)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.isActive)
                                    </td>
                                    <td id="@item.Id">
                                        <a data-value="@item.Id" class="btn btn btnActualizaHist" style="background-color:#F2AE0B    ; color:#ffffff;"><i class="fa fa-list"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3>@ViewBag.ClienteViewModel.nombre</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <div id="ContenedorModal"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/jszip-2.5.0/dt-1.10.20/af-2.3.4/b-1.6.0/b-colvis-1.6.0/b-flash-1.6.0/b-html5-1.6.0/b-print-1.6.0/cr-1.5.2/fc-3.3.0/fh-3.1.6/kt-2.5.1/r-2.2.3/rg-1.1.1/rr-1.2.6/sc-2.0.1/sl-1.3.1/datatables.min.css" />

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/jszip-2.5.0/dt-1.10.20/af-2.3.4/b-1.6.0/b-colvis-1.6.0/b-flash-1.6.0/b-html5-1.6.0/b-print-1.6.0/cr-1.5.2/fc-3.3.0/fh-3.1.6/kt-2.5.1/r-2.2.3/rg-1.1.1/rr-1.2.6/sc-2.0.1/sl-1.3.1/datatables.min.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {

            $(".btnActualizaHist").click(function () {
                var id = $(this).data("value");
                $("#ContenedorModal").load("/Historiales/ActualizaHistorial/" + id, function () {
                    $("#myModal").modal("show")
                });
            });

            $("#btnaddt").click(function (e) {
            e.preventDefault();
            var habilita = false;
                $("#btnaddt").prop("disabled", true);
                if ($("#isActivet").is(":checked")) {
                habilita = true;
            }
            //else if ($("#isActive").is(":not(:checked)")) {
            //    habilita = false;

            //}
            //if ($('#isActive').prop('checked')) {
            //    habilita = true;
            //}
            console.log(@ViewBag.ClienteViewModel.nit);
            $.ajax({
                url: "@Url.Action("GuardaHistorialt", "Historiales")", // Url
                data: {
                    Id: '@ViewBag.ClienteViewModel.nit',
                    Desde: $("#desdet").val(),
                    Hasta: $("#hastat").val(),
                    Placa: '@ViewBag.ClienteViewModel.nit',
                    isActive: habilita,
                },
                type: "post",  // Verbo HTTP

                success: function (datos) {
                    console.log(datos);
                    if (datos.status == "OK") {

                        //alert('Cita Guardada con exito, Continuar con la Calificación');
                        window.location.href = '/Historiales/Retorno/' + datos.description;
                    }
                    else {
                        alert(datos.description);

                    }
                }

            })


            //fin
        })
            var table = $("#tableVehiculos").DataTable({
                autoFill: true,
                paging: true,
                lengthChange: true,
                searching: true,
                ordering: true,
                info: true,
                autoWidth: false,
                responsive: true,
                processing: true,
                dom: 'lfrtip',
                language: {

                    url: "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },

                //order: [[1, 'asc']]
            });

            //new $.fn.dataTable.Buttons( table, {
            //    buttons: [
            //    'copy', 'excel', 'pdf'
            //    ]
            //});

            //table.buttons().container()
            //    .appendTo($('.col-sm-6:eq(0)', table.table().container()));

        });
    </script>
}

