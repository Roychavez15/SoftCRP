@model SoftCRP.Web.Models.AnalisisViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Analisis de Flota</h2>

@if (User.Identity.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Renting")))
{
<div class="row">
    <!-- SEARCH FORM -->
    <form method="post" class="form-inline ml-3">
        <div class="input-group input-group-sm">
            <input class="form-control form-control-navbar" id="buscarcliente" name="buscarcliente" type="text" placeholder="RUC Cliente" aria-label="Search">
            <div class="input-group-append">
                @*<button class="btn btn-navbar" type="submit">
                        <i class="fas fa-search"></i>
                    </button>*@
                @*<a asp-action="Index" asp-route-id="{buscarcliente}" class="btn-navbar"><i class="fa fa-search"></i></a>*@

                <button type="submit" asp-route-id="{buscarcliente}" class="btn btn" style="background-color:#F2AE0B   ; color:#ffffff;"><i class="fa fa-search"></i>&nbsp;Buscar</button>

            </div>
        </div>
    </form>
</div>
<br />


<p>
    <a asp-action="Create" asp-route-id="@Model.cedula" class="btn btn-primary">Crear Nuevo</a>
</p>
}

<br />

@if (ViewBag.ClienteViewModel != null)
{
<h2>Cliente: @ViewBag.ClienteViewModel.nombre</h2>
<h2 id="nit" name="nit">@ViewBag.ClienteViewModel.nit</h2>
}

<br />

@if (Model.analisis != null)
{
<table class="table table-bordered table-striped" id="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.analisis.tipoAnalisis.Tipo.FirstOrDefault)*@
                Tipo
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.analisis.Placa.FirstOrDefault())*@
                Placa
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.analisis.Fecha.FirstOrDefault())*@
                Fecha
            </th>
            <th>Archivos</th>
            <th>
                @*@Html.DisplayNameFor(model => model.analisis.Observaciones.FirstOrDefault())*@
                Observaciones
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.analisis)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tipoAnalisis.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Placa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArchivosAnalisis.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observaciones)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@

                <a asp-action="Edit" asp-route-id="@item.Id" style="background-color:#F2AE0B; color:#ffffff" class="btn btn-default"><i class="fa fa-edit"></i></a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="fa fa-info-circle"></i></a>
                @*<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger deletefile" id="btnDeleteItem"><i class="fa fa-trash"></i></a>*@
                <button type="button" data-id="@item.Id" class="btn btn-danger deletefile" data-toggle="modal" data-target="#deleteDialog">
                    <i class="far fa-trash-alt"></i>
                </button>

            </td>
        </tr>
            }
    </tbody>
</table>
}




<!--Delete Item-->
<div class="modal fade" id="deleteDialog" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Borrar Analisis</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Do you want to delete the record?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" id="btnYesDelete">Delete</button>
            </div>
        </div>
    </div>
</div>

