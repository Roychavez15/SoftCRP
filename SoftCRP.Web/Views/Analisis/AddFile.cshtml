@model SoftCRP.Web.Models.ArchivoAnalisisViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Add File</h2>

<h4>Analisis</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddFile" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Archivo" class="control-label"></label>
                <input asp-for="Archivo" class="form-control" type="file" />
                <span asp-validation-for="Archivo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-success">Back to Analisis</a>
            </div>
        </form>
    </div>
</div>

